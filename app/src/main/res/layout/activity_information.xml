<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFF"
    tools:context=".registration.InformationActivity">

    <LinearLayout
        android:id="@+id/ll_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:orientation="horizontal"
        android:padding="7dp">

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_vector_back" />

        <ImageView
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:src="@drawable/ic_feelfy_heart_blue" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="FeelFy"
            android:textColor="#098BFF"
            android:textSize="27sp"
            android:textStyle="bold" />

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/ll_toolbar">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <TextView
                android:id="@+id/tv_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="50dp"
                android:padding="10dp"
                android:text="Tell us a little over \nyou!"
                android:textColor="#000000"
                android:textSize="24sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/image_male"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_marginStart="50dp"
                    android:layout_marginBottom="2dp"
                    android:scaleType="center"
                    android:src="@drawable/ic_man"
                    android:tint="@color/color_login_background" />

                <ImageView
                    android:id="@+id/image_fmale"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_marginStart="50dp"
                    android:scaleType="center"
                    android:src="@drawable/ic_girl"
                    android:visibility="gone" />

                <ImageView
                    android:id="@+id/image_couple"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_gravity="center"
                    android:layout_marginStart="60dp"
                    android:scaleType="center"
                    android:src="@drawable/ic_man_girl"
                    android:visibility="gone" />

                <ImageView
                    android:id="@+id/image_male_to_male"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_marginStart="60dp"
                    android:scaleType="center"
                    android:src="@drawable/ic_homo_match_two"
                    android:visibility="gone" />

                <ImageView
                    android:id="@+id/image_women_to_women"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_marginStart="60dp"
                    android:scaleType="center"
                    android:src="@drawable/ic_lesbian_two"
                    android:visibility="gone" />

                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_marginStart="20dp"
                    android:layout_marginBottom="2dp"
                    app:cardCornerRadius="5dp"
                    app:cardElevation="4dp"
                    app:contentPadding="5dp">

                    <LinearLayout
                        android:id="@+id/ll_advanced_discription"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:src="@drawable/ic_vector_description" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="5dp"
                            android:textColor="@color/colorBlack"
                            android:text="Description \nAdvanced" />

                    </LinearLayout>


                </androidx.cardview.widget.CardView>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="60dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="60dp"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/et_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:hint="Name / Nickname "
                    android:imeOptions="actionNext"
                    android:inputType="text"
                    android:paddingBottom="12dp"
                    android:textSize="17sp" />

                <EditText
                    android:id="@+id/edt_date_birth"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:hint="D D  /  M M  /  Y Y Y Y "
                    android:imeOptions="actionNext"
                    android:paddingBottom="12dp"
                    android:inputType="none"
                    android:focusable="false"
                    android:textSize="17sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Date of Birth"
                    android:textSize="12sp" />

                <EditText
                    android:id="@+id/et_sexual_orientation"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:drawableEnd="@drawable/ic_vector_down_arrow"
                    android:hint="Sexual orientation"
                    android:imeOptions="actionNext"
                    android:inputType="text"
                    android:paddingBottom="12dp"
                    android:textSize="17sp" />

                <EditText
                    android:id="@+id/et_gender_identify"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:drawableEnd="@drawable/ic_vector_down_arrow"
                    android:hint="Gender identity"
                    android:imeOptions="actionNext"
                    android:inputType="text"
                    android:paddingBottom="12dp"
                    android:textSize="17sp" />


                <TextView
                    android:id="@+id/tv_next"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:layout_marginBottom="5dp"
                    android:layout_marginEnd="5dp"
                    android:background="@drawable/shape_login_button"
                    android:gravity="center"
                    android:padding="20dp"
                    android:text="Next"
                    android:textColor="@color/colorWhite"
                    android:textSize="17sp" />


            </LinearLayout>

        </LinearLayout>

    </ScrollView>


</RelativeLayout>