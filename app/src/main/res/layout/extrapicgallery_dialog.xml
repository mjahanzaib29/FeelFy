<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/constraintview"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_gravity="right"
        android:gravity="right"
        >

        <ImageView
            android:id="@+id/close_btn_gallery"
            android:layout_width="40dp"
            android:layout_height="50dp"
           android:layout_marginRight="10dp"
            android:src="@mipmap/cancel"
            android:layout_alignParentLeft="true">
        </ImageView>
    </LinearLayout>




    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

      <RelativeLayout
          android:layout_width="match_parent"
          android:layout_height="match_parent">

          <LinearLayout
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="horizontal">

              <ImageView
                  android:id="@+id/picture_dialog1"
                  android:layout_width="320dp"
                  android:layout_height="540dp"
                  android:layout_margin="20dp">

              </ImageView>

              <ImageView
                  android:id="@+id/picture_dialog2"
                  android:layout_width="320dp"
                  android:layout_height="540dp"
                  android:layout_margin="20dp">

              </ImageView>

              <ImageView
                  android:id="@+id/picture_dialog3"
                  android:layout_width="320dp"
                  android:layout_height="540dp"
                  android:layout_margin="20dp">

              </ImageView>

              <ImageView
                  android:id="@+id/picture_dialog4"
                  android:layout_width="320dp"
                  android:layout_height="540dp"
                  android:layout_margin="20dp">

              </ImageView>

              <ImageView
                  android:id="@+id/picture_dialog5"
                  android:layout_width="320dp"
                  android:layout_height="540dp"
                  android:layout_margin="20dp">

              </ImageView>

              <ImageView
                  android:id="@+id/picture_dialog6"
                  android:layout_width="320dp"
                  android:layout_height="540dp"
                  android:layout_margin="20dp">

              </ImageView>


          </LinearLayout>

      </RelativeLayout>


    </HorizontalScrollView>

</LinearLayout>