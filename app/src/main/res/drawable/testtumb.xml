<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="true" tools:ignore="StateListReachable" android:drawable="@drawable/custom_eye">
        <shape android:shape="oval">
            <size android:width="10dp" android:height="10dp"/>
            <solid android:color="#098BFF"/>

            <stroke android:width="1dp" android:color="#098BFF"/>
        </shape>

    </item>


    <item android:state_checked="false" android:drawable="@drawable/custom_hidden">
        <shape android:shape="oval">
            <size android:width="10dp" android:height="10dp"/>
            <solid android:color="#098BFF"/>
            <stroke android:width="1dp" android:color="#098BFF"/>
        </shape>
    </item>
</selector>

